DESCRIPTION="@PACKAGE_SHORTDESC@"
HOMEPAGE="@PACKAGE_URL@/"
SRC_URI="mirror://sourceforge/sc68/${P}.tar.gz"
LICENSE="GPL-2"
SLOT="0"
KEYWORDS="~x86"
IUSE=""
S=${WORKDIR}/${P}

src_compile() {
    econf || die
    emake || die
}

src_install() {
    make DESTDIR=${D} install || die
}
